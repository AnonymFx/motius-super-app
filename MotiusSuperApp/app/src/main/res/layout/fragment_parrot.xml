<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="de.thomas.pettinger.motiussuperapp.ParrotFragment">

    <ImageButton
        android:id="@+id/parrot"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/parrot" />

    <EditText
        android:id="@+id/parrot_text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/parrot" />

    <TextView
        android:layout_width="250dp"

        android:layout_height="wrap_content"
        android:layout_below="@id/parrot_text"
        android:gravity="center"
        android:text="@string/parrot_hint"
        android:textAppearance="@android:style/TextAppearance.Medium" />
</RelativeLayout>
